{
  "name": "sanity-starter",
  "private": true,
  "version": "1.0.0",
  "description": "A simple boilerplate for kickstarting Sanity projects.",
  "main": "package.json",
  "author": {
    "name": "Piers Olenski",
    "url": "https://piersolenski.com"
  },
  "license": "UNLICENSED",
  "scripts": {
    "bootstrap": "plop bootstrap",
    "build": "sanity build",
    "deploy:graphql": "sanity graphql deploy --playground",
    "deploy:studio": "sanity deploy",
    "deploy": "sanity deploy && sanity graphql deploy --playground",
    "dev": "sanity start",
    "lint": "eslint src/**/*.js",
    "plop": "plop",
    "test": "sanity check"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/base": "^2.0.9",
    "@sanity/cli": "^2.0.9",
    "@sanity/color-input": "^2.0.9",
    "@sanity/components": "^2.0.9",
    "@sanity/core": "^2.0.9",
    "@sanity/default-layout": "^2.0.9",
    "@sanity/default-login": "^2.0.9",
    "@sanity/desk-tool": "^2.0.9",
    "@sanity/vision": "^2.0.9",
    "prop-types": "^15.6",
    "react": "^16.2",
    "react-dom": "^16.2",
    "react-icons": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "plop": "^2.7.4",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.+(json|css|md)": "prettier --write"
  }
}
